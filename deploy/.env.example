# Application Configuration
# Running mode: debug or release
GIN_MODE=release

# Server port (usually 8080 for development, platform-specific for cloud)
SERVER_PORT=8080

# Database Configuration
# PostgreSQL database host (e.g., localhost, or cloud provider host)
DB_HOST=localhost

# PostgreSQL database port (default: 5432)
DB_PORT=5432

# PostgreSQL database user
DB_USER=postgres

# PostgreSQL database password (REQUIRED - do not leave empty in production)
DB_PASSWORD=your_database_password_here

# PostgreSQL database name
DB_NAME=tourism_recommender

# PostgreSQL SSL mode (disable for local, require for cloud)
DB_SSLMODE=disable

# Admin Default Configuration
# These are used when seeding the database with default admin user
# If not set, defaults: admin / admin123456 / admin@tourism.com
DEFAULT_ADMIN_USERNAME=admin

DEFAULT_ADMIN_PASSWORD=admin123456

DEFAULT_ADMIN_EMAIL=admin@tourism.com

# QR Code Configuration
# Base URL for the application (used in QR code generation)
# Update this with your actual deployed URL
BASE_URL=http://localhost:8082

# WeChat Mini Program App ID (from your WeChat Mini Program settings)
WX_APP_ID=wxa1802e324f2f4712

# WeChat Mini Program path for recommendor details (used in QR codes)
WX_APP_PATH=pages/recommendor/detail
