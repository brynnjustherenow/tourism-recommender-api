/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 120rpx;
}

/* Search Bar */
.search-bar {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.search-input {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 0 24rpx;
  background-color: #f5f7fa;
  border-radius: 35rpx;
  color: #999;
  font-size: 28rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

/* Banner */
.banner {
  width: 100%;
  height: 320rpx;
  background-color: #ffffff;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* Categories */
.categories {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
  background-color: #f0f9ff;
  border-radius: 50%;
  padding: 20rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* Section */
.section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

/* Recommendor Section */
.recommendor-scroll {
  display: flex;
  white-space: nowrap;
  width: 100%;
}

.recommendor-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.recommendor-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  background-color: #e0e0e0;
}

.recommendor-info {
  display: flex;
  flex-direction: column;
}

.recommendor-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.recommendor-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.recommendor-region {
  font-size: 24rpx;
  color: #666;
}

.recommendor-rating {
  font-size: 24rpx;
  color: #f39c12;
  font-weight: bold;
}

.recommendor-bio {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Destination Section */
.destination-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.destination-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f8f9fa;
}

.destination-image {
  width: 100%;
  height: 240rpx;
  background-color: #e0e0e0;
}

.destination-content {
  padding: 16rpx;
}

.destination-name {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.destination-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.destination-category {
  font-size: 22rpx;
  color: #666;
  background-color: #f0f9ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.destination-rating {
  font-size: 22rpx;
  color: #f39c12;
  font-weight: bold;
}

/* Load More */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 28rpx;
  color: #3498db;
}

/* No More */
.no-more {
  padding: 40rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* Loading Mask */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* Responsive adjustments */
@media (max-width: 750rpx) {
  .recommendor-item {
    width: 260rpx;
  }

  .destination-grid {
    grid-template-columns: 1fr;
  }
}
