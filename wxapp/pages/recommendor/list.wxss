/* pages/recommendor/list.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 筛选卡片 */
.filter-card {
  margin: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-item {
  margin-bottom: 24rpx;
}

.filter-item:last-child {
  margin-bottom: 0;
}

/* 输入框 */
.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  position: relative;
}

.input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.clear-icon {
  font-size: 32rpx;
  color: #999999;
  padding: 0 10rpx;
}

/* 选择器 */
.picker-wrapper {
  display: flex;
  align-items: center;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
}

.picker-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.picker-arrow {
  font-size: 40rpx;
  color: #999999;
  margin-left: 8rpx;
}

.clear-region {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
  display: block;
}

/* 按钮组 */
.filter-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.search-btn {
  flex: 2;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

.search-btn::after {
  border: none;
}

.reset-btn {
  flex: 1;
  background-color: #f7f8fa;
  color: #666666;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}

.reset-btn::after {
  border: none;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 推荐官列表 */
.recommendors-list {
  padding: 0 30rpx;
}

/* 推荐官卡片 */
.recommendor-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.recommendor-card:active {
  transform: scale(0.98);
}

/* 头像 */
.card-avatar {
  width: 180rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

/* 信息区域 */
.card-info {
  flex: 1;
  min-width: 0;
}

/* 姓名 */
.recommendor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

/* 评分行 */
.rating-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.stars {
  display: flex;
  gap: 4rpx;
  margin-right: 12rpx;
}

.star {
  font-size: 24rpx;
  color: #d9d9d9;
}

.star.filled {
  color: #faad14;
}

.star.half {
  color: #faad14;
  opacity: 0.7;
}

.rating-score {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.info-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 简介 */
.bio {
  margin-bottom: 12rpx;
}

.bio-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 状态行 */
.status-row {
  margin-bottom: 12rpx;
}

.status-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.status-tag.active {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-tag.inactive {
  background-color: #fff1f0;
  color: #ff4d4f;
  border: 1rpx solid #ffa39e;
}

/* 查看详情 */
.view-detail {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-text {
  font-size: 24rpx;
  color: #667eea;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-text {
  font-size: 24rpx;
  color: #999999;
}

/* 总数统计 */
.total-count {
  text-align: center;
  padding: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
