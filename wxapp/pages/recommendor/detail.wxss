/* pages/recommendor/detail.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-top: 25rpx;
  padding-bottom: 40rpx;
}

/* 返回按钮 */
.back-btn {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.back-icon {
  font-size: 48rpx;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 内容区域 */
.content {
  padding: 0 30rpx;
}

/* 头部卡片 */
.header-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 头像区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-bottom: 24rpx;
}

.rating-display {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rating-score {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.stars {
  display: flex;
  gap: 6rpx;
}

.star {
  font-size: 32rpx;
  color: #d9d9d9;
}

.star.filled {
  color: #faad14;
}

.star.half {
  color: #faad14;
  opacity: 0.7;
}

/* 信息区域 */
.info-section {
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 16rpx;
}

.status-tag {
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-tag.active {
  background-color: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.status-tag.inactive {
  background-color: #fff1f0;
  color: #ff4d4f;
  border: 1rpx solid #ffa39e;
}

.bio {
  margin-top: 16rpx;
}

.bio-label {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.bio-text {
  font-size: 28rpx;
  color: #595959;
  line-height: 1.8;
}

/* 信息卡片 */
.info-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-group {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f7f8fa;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  word-break: break-all;
}

.info-value.phone,
.info-value.email {
  color: #667eea;
  text-decoration: underline;
}

/* 二维码卡片 */
.qrcode-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.qrcode-list {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}

.qrcode-item {
  flex: 1;
  min-width: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
}

.qrcode-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.qrcode-wrapper {
  width: 280rpx;
  height: 280rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e8e8e8;
  margin-bottom: 16rpx;
}

.qrcode-image {
  width: 260rpx;
  height: 260rpx;
}

.qrcode-empty {
  width: 280rpx;
  height: 280rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.qrcode-empty text {
  font-size: 24rpx;
  color: #999999;
}

.qrcode-tip {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
  text-align: center;
}

.save-qrcode-btn {
  background-color: #667eea;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding: 12rpx 32rpx;
  line-height: 1.4;
}

.save-qrcode-btn::after {
  border: none;
}

/* 推荐目的地卡片 */
.destinations-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.destinations-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 目的地卡片 */
.destination-card {
  display: flex;
  background-color: #f9fafb;
  border-radius: 12rpx;
  overflow: hidden;
}

.destination-image-wrapper {
  width: 200rpx;
  flex-shrink: 0;
}

.destination-image {
  width: 200rpx;
  height: 200rpx;
}

.destination-info {
  flex: 1;
  padding: 20rpx;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.destination-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.destination-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.destination-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.destination-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.mini-stars {
  display: flex;
  gap: 2rpx;
}

.mini-star {
  font-size: 20rpx;
  color: #d9d9d9;
}

.mini-star.filled {
  color: #faad14;
}

.mini-star.half {
  color: #faad14;
  opacity: 0.7;
}

.mini-rating-score {
  font-size: 20rpx;
  color: #666666;
}

.destination-tags {
  display: flex;
  gap: 8rpx;
}

.destination-tag {
  font-size: 20rpx;
  color: #667eea;
  background-color: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.destination-tag.more {
  color: #999999;
  background-color: rgba(153, 153, 153, 0.1);
}

.view-detail-btn {
  margin-top: auto;
  padding-top: 16rpx;
  border-top: 1rpx solid #e8e8e8;
  text-align: center;
}

.view-detail-btn text {
  font-size: 24rpx;
  color: #667eea;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  margin-top: 24rpx;
}

.load-more-text {
  font-size: 24rpx;
  color: #999999;
}
